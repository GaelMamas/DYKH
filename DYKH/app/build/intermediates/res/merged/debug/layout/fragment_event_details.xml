<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/my_light_cardview_background">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="@dimen/space.small"
        android:textColor="@color/generic_black_text_color"/>

    <TextView
        android:id="@+id/event_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space.small"
        android:textColor="@color/generic_black_text_color"/>

    <TextView
        android:id="@+id/event_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="20sp"
        android:layout_margin="@dimen/space.small"
        android:textColor="@color/generic_black_text_color"/>

    <TextView
        android:id="@+id/event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space.small"
        android:textColor="@color/generic_black_text_color"/>

    <TextView
        android:id="@+id/event_slice_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space.small"
        android:textColor="@color/generic_black_text_color"/>

</LinearLayout>